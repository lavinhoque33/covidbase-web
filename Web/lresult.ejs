<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery.devbridge-autocomplete/1.4.10/jquery.autocomplete.min.js"></script>
<script>
    $('.close').click(function () {
        $('#ealert').hide();
    });
    $("#dg-facet").hover(function(){
        $(this).css("background-color", "yellow");
        $(this).css('cursor', 'pointer');
    }, function(){
        $(this).css("background-color", "");
    });
    $("#se-facet").hover(function(){
        $(this).css("background-color", "yellow");
        $(this).css('cursor', 'pointer');
    }, function(){
        $(this).css("background-color", "");
    });


    $("#srch").autocomplete({
        source: drugs,
        treshold:1,
        maximumItems:100,
        onSelectItem:function () {
            $('#srch').focus();
        },
    });
    $("#categ").change(function () {
        let tmp = $(this).val();
        if(tmp == 'Drug-Disease'){
            $("#srch").autocomplete({
                source: ddpairs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Diseases'){
            $("#srch").autocomplete({
                source: diseases,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Drugs'){
            $("#srch").autocomplete({
                source: drugs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Genes'){
            $("#srch").autocomplete({
                source: genes,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'miRNAs'){
            $("#srch").autocomplete({
                source: mirnas,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'lncRNAs'){
            $("#srch").autocomplete({
                source: lncrnas,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'PDBs'){
            $("#srch").autocomplete({
                source: pdbs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Disease-Gene'){
            $("#srch").autocomplete({
                source: dgpairs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Disease-miRNA'){
            $("#srch").autocomplete({
                source: dmpairs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Disease-lncRNA'){
            $("#srch").autocomplete({
                source: dlpairs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }else if(tmp == 'Drug-PDB'){
            $("#srch").autocomplete({
                source: dppairs,
                treshold:1,
                maximumItems:100,
                onSelectItem:function () {
                    $('#srch').focus();
                },
            });
        }
    });
    $('#srch').keypress(function(event){

        var keycode = (event.keyCode ? event.keyCode : event.which);
        if(keycode == '13'){
            submitSearch();
        }

    });
    function submitSearch() {
        var tmp1 = {};
        tmp1.categ = $('#categ').val();
        tmp1.search = $('#srch').val();
        if(tmp1.search.length === 0)
            $('#ealert').show();
        else{
            document.querySelector('#obje').value = JSON.stringify(tmp1);
            document.querySelector('#finalSub').submit();
        }
    }

    //new Functionality
    if(sResults.length <= 1)
        $('#foot').addClass('fixed-bottom');
    let gquery,dbankid = '';
    if(categ === 'PDBs'){
        $("#search-term").text(query.toUpperCase());
        $("#search-link").attr("href", `https://www.rcsb.org/structure/${query}`);
        $(`#faCount`).text(sResults.length);
    }else if(categ === 'Drug-PDB'){
        dbankid = sResults[0].Dbankid;
        $("#search-term").text(query.split('+')[1].toUpperCase());
        $("#search-term2").text(`- ${query.split('+')[0].replace(/^\w/, c => c.toUpperCase())}`);
        $("#search-link").attr("href", `https://www.rcsb.org/structure/${query.split('+')[1]}`);
        $("#sid2").show();
        if(dbankid)
            $("#search-link2").attr("href", ` https://www.drugbank.ca/drugs/${dbankid}`);
        else
            $("#search-link2").attr("href", `#`);
        $(`#facet-tag`).text(categ);
        $(`#faCount`).text(sResults.length);
        $(`#se-facet`).show();
        $(`#se-facet`).addClass('d-flex');
        $(`#seCount`).text(seResults.length);
    }

    for(let i=0; i<sResults.length; i++){
        let htm;
        if(categ === 'PDBs')
            htm = createHtml(i,sResults[i]['Drug'],sResults[i]['Dbankid']);
        else if(categ === 'Drug-PDB')
            htm = createHtml(i,sResults[i]['Drug']+'+'+sResults[i]['Pdb'],'');
        addElement(`resultQuery`, 'table', `result${i}`,`table table-sm table-borderless table-light shadow p-3 mb-2 rounded-lg` , htm);
        $(`#showmore${i}`).click(function () {
            let elem = $(`#descriptionCell${i}`).children("p.initial").children("span.more").children("span.mpart");
            if($(this).text().includes('more')){
                $(`#moredots${i}`).hide();
                elem.show();
                $(this).text(`Show less <`);
            }else if($(this).text().includes('less')){
                $(`#moredots${i}`).show();
                elem.hide();
                $(this).text(`Show more >`);
            }
        });
    }

    if(categ === 'Drug-PDB'){
        for(let i=0; i<seResults.length; i++){
            let htm = createHtml2(i,seResults[i]);
            addElement(`resultQuery2`, 'table', `res${i}`,`table table-sm table-borderless table-light shadow p-3 mb-2 rounded` , htm);
        }
    }

    $(`#dg-facet`).click(function () {
        $(`#resultQuery`).show();
        $(`#resultQuery2`).hide();
    });
    $(`#se-facet`).click(function () {
        $(`#resultQuery2`).show();
        $(`#resultQuery`).hide();
    });

    function createHtml(id,title,link) {
        let lnk,text2='',tget = `target="_blank" `,squery,scateg,stitle;
        if(categ === 'PDBs'){
            squery = query;scateg = categ.slice(0,-1);stitle=title;
            if(link)
                lnk = `https://www.drugbank.ca/drugs/${link}`;
            else{
                lnk = '#';
                tget = '';
            }
        }else{
            squery = query.split('+')[1];stitle = query.split('+')[0];scateg = categ.split('-')[1];
            text2 = ' d-none';
        }
        let htm = `<tbody>
                    <tr style="background-color: #e3faf0">
                        <td rowspan="1" style="width: 3%;"></td>
                        <td style="width: 94%"><h3 id="titleCell${id}"><span style="background-color:yellowgreen" class="badge badge-info rounded-circle"> D </span>&nbsp;&nbsp;
                                <a href="/${scateg}/${squery}/d=${stitle}">${title}</a>&nbsp;&nbsp;<a class="btn btn-info float-right" href="/Drugs/${stitle}">Query Link</a></h3>
                        </td>
                        <td rowspan="1" style="width: 3%"></td>
                    </tr>
                    <tr>
                        <td rowspan="1" style="width: 3%"></td>
                        <td style="width: 88%" id="descriptionCell${id}">
                            <p class="initial"><span class="fpart"><a ${tget}class="btn btn-outline-primary${text2}" href="${lnk}">External Link</a></span><span id="moredots${id}" style="display: none">...&nbsp;</span><span class="more"><span class="mpart" style="display: none">!</span>&nbsp;&nbsp;
                                    <a id="showmore${id}" style="display: none" href="javascript:void(0)">Show more &gt;</a></span>
                            </p>
                        </td>
                        <td rowspan="1" style="width: 3%"></td>
                    </tr>
                </tbody>`;
        return htm;
    }

    function createHtml2(id,title) {
        let htm = `<tbody>
                    <tr style="background-color: #fcf5de">
                        <td rowspan="1" style="width: 3%;"></td>
                        <td style="width: 94%"><h3 id="tCellse${id}"><span style="background-color:#ffac1b" class="badge badge-info rounded-circle"> E </span>&nbsp;&nbsp;
                                <a href="#">${title}</a>&nbsp;&nbsp;</h3>
                        </td>
                        <td rowspan="1" style="width: 3%;"></td>
                    </tr>
                    <tr>
                        <td rowspan="1" style="width: 3%;"></td>
                        <td style="width: 88%" id="dCellse${id}">
                            <p class="initial"></p>
                        </td>
                        <td rowspan="1" style="width: 3%;"></td>
                    </tr>
                </tbody>`;
        return htm;
    }

    function addElement(parentID, elementTag, elementID, cls, html) {
        var p = document.getElementById(parentID);
        var newElement = document.createElement(elementTag);
        newElement.setAttribute('id', elementID);
        newElement.setAttribute('class', cls);
        newElement.style.overflow = "hidden";
        newElement.innerHTML = html;
        p.appendChild(newElement);
    }
</script>

