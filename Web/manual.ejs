<script>
    $('#close2').click(function () {
        $('#ealert').hide();
    });
    $("#srch").autocomplete({
        source: drugs,
        treshold: 1,
        maximumItems: 100,
        onSelectItem: function () {
            $('#srch').focus();
        },
    });
    $("#categ").change(function () {
        let tmp = $(this).val();
        if (tmp == 'Drug-Disease') {
            $("#srch").autocomplete({
                source: ddpairs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Diseases') {
            $("#srch").autocomplete({
                source: diseases,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Drugs') {
            $("#srch").autocomplete({
                source: drugs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Genes') {
            $("#srch").autocomplete({
                source: genes,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'miRNAs') {
            $("#srch").autocomplete({
                source: mirnas,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'lncRNAs') {
            $("#srch").autocomplete({
                source: lncrnas,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'PDBs') {
            $("#srch").autocomplete({
                source: pdbs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Disease-Gene') {
            $("#srch").autocomplete({
                source: dgpairs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Disease-miRNA') {
            $("#srch").autocomplete({
                source: dmpairs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Disease-lncRNA') {
            $("#srch").autocomplete({
                source: dlpairs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        } else if (tmp == 'Drug-PDB') {
            $("#srch").autocomplete({
                source: dppairs,
                treshold: 1,
                maximumItems: 100,
                onSelectItem: function () {
                    $('#srch').focus();
                },
            });
        }
    });
    $('#srch').keypress(function (event) {

        var keycode = (event.keyCode ? event.keyCode : event.which);
        if (keycode == '13') {
            submitSearch();
        }

    });

    function submitSearch() {
        var tmp1 = {};
        tmp1.categ = $('#categ').val();
        tmp1.search = $('#srch').val();
        if (tmp1.search.length === 0)
            $('#ealert').show();
        else {
            document.querySelector('#obje').value = JSON.stringify(tmp1);
            document.querySelector('#finalSub').submit();
        }
    }
</script>
